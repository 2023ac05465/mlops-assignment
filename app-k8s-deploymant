apiVersion: apps/v1
kind: Deployment
metadata:
  name: housing-flask-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: housing-flask-app
  template:
    metadata:
      labels:
        app: housing-flask-app
    spec:
      containers:
        - name: housing-predictor
          image: gsingla294/housing_prediction:latest # your image
          ports:
            - containerPort: 8000

    
---
apiVersion: v1
kind: Service
metadata:
  name: housing-flask-service
spec:
  selector:
    app: housing-flask-app
  ports:
    - protocol: TCP
      port: 8000
      nodePort: 30800
  type: NodePort